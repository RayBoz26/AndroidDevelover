<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/article_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beatles Anthology Vol.1"
        android:background="#0027FF"
        android:padding="2dp"
        android:textColor="@android:color/white"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/article_subheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Behind That Locked Door :Beatles Ratities!"
        android:textColor="#06F60F"
        android:layout_marginTop="10dp"
        android:layout_below="@id/article_heading"
        android:padding="2dp"
       android:textAppearance="@android:style/TextAppearance.DeviceDefault" />


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/article_subheading">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/article"
                android:autoLink="web"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="5sp"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In a vault deep inside abbey road studios in london - p..."
                android:textColor="#FFE505" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>